@model IEnumerable<App.Core.ViewModels.PostTitleModel>

@{
    ViewBag.Title = "Index";
}

<hgroup class="title" style="font-size: 24px;">
    Post List
</hgroup>
<hr />
<p style="text-align: right;">
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width:90%;">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="width:5%;"></th>
                <th style="width:5%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", @style = "text-decoration:none;", @title = "Edit" })
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", @style = "text-decoration:none;", @title = "Delete" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>